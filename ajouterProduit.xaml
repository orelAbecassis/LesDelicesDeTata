<Window x:Class="LesDelicesDeTata.ajouterProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LesDelicesDeTata"
        mc:Ignorable="d"
        Title="ajouterProduit" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nom du produit:"/>
            <TextBox x:Name="nomTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Description:"/>
            <TextBox x:Name="descriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Prix:"/>
            <TextBox x:Name="prixTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Image URL:"/>
            <TextBox x:Name="imageTextBox" Margin="0,0,0,10"/>

            <Button Content="Ajouter" Click="Ajouter_Click"/>
        </StackPanel>
    </Grid>
</Window>
